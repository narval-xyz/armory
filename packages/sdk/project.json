{
  "name": "sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/sdk",
        "tsConfig": "packages/sdk/tsconfig.lib.json",
        "packageJson": "packages/sdk/package.json",
        "main": "packages/sdk/src/index.ts",
        "assets": ["packages/sdk/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs engine-request {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/sdk/**/*.ts", "{projectRoot}/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/sdk/jest.config.ts"
      }
    }
  },
  "tags": []
}
